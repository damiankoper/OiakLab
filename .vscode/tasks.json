{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "command": "make ./bin/${fileBasenameNoExtension}.out",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Debug",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "command": "make ./bin/${fileBasenameNoExtension}.out && gdb -q ./bin/${fileBasenameNoExtension}.out",
      "problemMatcher": []
    }
  ]
}